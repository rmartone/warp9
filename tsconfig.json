{
  "compilerOptions": {
    "strict": true,
    "target": "es6",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": true,
    "declaration": true,
    "outDir": "./dist"
  },
  "include": ["./src/*.ts"]
}
